<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.stage.Stage?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" styleClass="alert">
  <top>
    <HBox>
      <VBox>
        <Label styleClass="alert-header" text="Lowest Energy Not Realized!"/>
        <Label styleClass="alert-content" 
               text="Would you like to recover the lowest energy state?"
               wrapText="true"/>
      </VBox>
      <VBox styleClass="alert-graphic">
        <ImageView styleClass="info-img"></ImageView>
      </VBox>
    </HBox>
  </top>
  <center>
    <VBox style="-fx-spacing: 12">
      <HBox styleClass="alert-buttons">
        <Button fx:id="applyBtn" text="Yes"/>
        <Button fx:id="cancelBtn" text="No"/>
      </HBox>
    </VBox>
  </center>
</BorderPane>
